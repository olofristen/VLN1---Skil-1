        do{
            cout << "input gender (F/M): ";
            cin >> a;

            if(a.compare("f") == 0 || a.compare("F") == 0){
                gender = "Female";
            }
            else if(a.compare("m") == 0 || a.compare("M") == 0){
                gender = "Male";
            }
            else{
                cout << "Invalid input" << endl;
            }
        }while(gender == "");
